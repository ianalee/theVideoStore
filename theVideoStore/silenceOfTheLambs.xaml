<Page x:Class="theVideoStore.silenceOfTheLambs"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:theVideoStore"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="silenceOfTheLambs">

    <Grid VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <StackPanel Orientation="Horizontal">
            <Grid Background="Black" Width="Auto">
                <Label Content="Silence of the Lambs" Foreground="White" FontFamily="Arial" Margin="0,0,38,0"/>
                <Button x:Name="buttonAdd" Content="New client" HorizontalAlignment="Left" Margin="10,270,0,0" VerticalAlignment="Top" Width="75" Click="buttonAdd_Click"/>
                <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,135,10,0" VerticalAlignment="Top" Height="Auto" Width="Auto" SelectionChanged="dataGrid_SelectionChanged"/>
            </Grid>
            <Image Source="images/silenceOfTheLambs.jpg" Stretch="Fill"/>
        </StackPanel>

    </Grid>
</Page>
